<header id="header">
    <div class="container-fluid">

        <div class="navbar-header">
            <a
                    href="#"
                    data-toggle="navigation"
                    class="fa fa-bars pull-left visible-xs"></a>

            <a
                    href="#"
                    data-toggle="collapse"
                    data-target="#header .collapse"
                    class="fa fa-ellipsis-v pull-right visible-xs"></a>
        </div>

        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                {% for section in template.cp.sections.root() %}
                    <li class="{{ section.highlighted ? 'active' }}">
                        <a {{ html_attributes(section.attributes) }}>
                            {{ section.icon ? icon(section.icon)|raw }}
                            {{ trans(section.text) }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
            <div class="buttons navbar-btn">
                {{ buttons(template.cp.buttons) }}
            </div>
        </div>

    </div>
</header>